{
  "buildCommand": "yarn build",
  "outputDirectory": "dist",
  "framework": "vite",
  "installCommand": "yarn install",
  "functions": {
    "api/signal.js": {
      "maxDuration": 30
    },
    "api/cinema/next-release.js": {
      "maxDuration": 30
    },
    "api/cinema/movie/[id].js": {
      "maxDuration": 30
    },
    "api/movie-details.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
